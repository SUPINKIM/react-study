{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^type-checking", "^build"],
            "outputs": ["dist/**"]
        },
        "deploy": {
            "dependsOn": ["build", "test", "lint"]
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
        },
        "type-checking": {},
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
