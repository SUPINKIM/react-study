{
    "extends": "tsconfig/base.json",
    // "files": ["./src/main.tsx"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"]
        },
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "emitDeclarationOnly": true,
        "declaration": true,
        "noEmit": false,
        "outDir": "./@types"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules", "./dist"]
}
